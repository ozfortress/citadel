- comm_p = present(comm)

.panel.panel-danger
  - collapse_id = dom_id(comm, 'collapse')
  %button.btn.btn-link.pull-right{ data: { toggle: :collapse, target: "##{collapse_id}" } }
    .glyphicon.glyphicon-menu-down

  .panel-heading

    #{comm_p.deleted_at},
    = comm_p.deleted_by.link
    deleted post by
    = comm_p.created_by.link
  .collapse{ id: collapse_id }
    = render 'leagues/matches/comms/comm', match: match, comm: comm, comm_p: comm_p
