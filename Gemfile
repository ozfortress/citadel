  # Web feature testing
  gem 'capybara'

  # Keep codebase clean
  gem 'rubocop', '~> 0.47'
  gem 'haml_lint'
  gem 'rails_best_practices'
  gem 'reek'

  # Coveralls
  gem 'coveralls', require: false
end

